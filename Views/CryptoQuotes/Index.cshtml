
@{
    ViewBag.Title = "Index";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Котировки валют</title>
</head>
<body>
    <div>
        <h3>Котировки валютг</h3>
        <table>
            <tr>
                <td><p>Название</p></td>
                <td><p>Символ</p></td>
                <td><p>Логотип</p></td>
                <td><p>Цена,$</p></td>
                <td><p>Изменение цены за 1 час, %</p></td>
                <td><p>Изменение цены за 24 часа, %</p></td>
                <td><p>Капитализация</p></td>
                <td><p>Обновление</p></td>
                <td></td>
            </tr>
            @foreach (var q in ViewBag.Quotes)
            {
                <tr>
                    <td><p>@q.Name</p></td>
                    <td><p>@q.Symbol</p></td>
                    <td><p><Img src=@q.Logo Width="200" Height="200"></p></td>
                    <td><p>@q.Price</p></td>
                    <td><p>@q.Percent_change_1h</p></td>
                    <td><p>@q.Percent_change_24h</p></td>
                    <td><p>@q.Market_cap</p></td>
                    <td><p>@q.Last_updated</p></td>
                </tr>
            }
        </table>
    </div>
</body>
</html>

